begin
    prog   = irexec
    remote = arduino17
    button = KEY_DOWN
    config = amixer -q sset 'Lineout volume control' 3%- ; rm -f /tmp/irkeys.tmp
    repeat = 1
end
begin
    prog   = irexec
    remote = arduino17
    button = KEY_UP
    config = amixer -q sset 'Lineout volume control' 3%+ ; rm -f /tmp/irkeys.tmp
    repeat = 1
    delay  = 2
end
begin
    prog   = irexec
    remote = arduino17
    button = KEY_RIGHT
    config = if (( $(mpc playlist | wc -l) < 2 )) ; then if [ -f /tmp/irchan.tmp ] ; then { /home/radio/handler.sh $(( 1 + $(cat /tmp/irchan.tmp) % ( $(wc -l /home/radio/radio.list | cut -d" " -f1 ) - 1 ) )) ; } ; else { /home/radio/handler.sh 1 ; } ; fi ; else mpc next ; fi
    repeat = 0
end
begin
    prog   = irexec
    remote = arduino17
    button = KEY_LEFT
    config = if (( $(mpc playlist | wc -l) < 2 )) ; then if [ -f /tmp/irchan.tmp ] ; then { /home/radio/handler.sh $(( ( $(cat /tmp/irchan.tmp) + $(wc -l /home/radio/radio.list | cut -d" " -f1 ) -2 ) % ( $(wc -l /home/radio/radio.list | cut -d" " -f1 )) +1 ))  ; } ; else { /home/radio/handler.sh $(wc -l /home/radio/radio.list | cut -d" " -f1 ) ; } ; fi ; else mpc prev ; fi
    repeat = 0
end
# hash (confirms number)
begin
    prog   = irexec
    remote = arduino17
    button = KEY_SPACE
    config = [ -f /tmp/irkeys.tmp ] && { /home/radio/handler.sh $(cat /tmp/irkeys.tmp) ; rm -f /tmp/irkeys.tmp ; }
    repeat = 0
end
# asterisk (random)
begin
    prog   = irexec
    remote = arduino17
    button = KEY_BACK
    config = /home/radio/handler.sh $(( 1 + $RANDOM % $(wc -l /home/radio/radio.list | cut -d" " -f1) )) ; rm -f /tmp/irkeys.tmp
    repeat = 0
end
# OK (mute)
begin
    prog   = irexec
    remote = arduino17
    button = KEY_OK
#    config = amixer -q sset 'Lineout volume control' toggle ; rm -f /tmp/irkeys.tmp
    config = mpc toggle ; rm -f /tmp/irkeys.tmp
    repeat = 0
end

